<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/calendar_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.applandeo.materialcalendarview.CalendarView
            android:layout_margin="4dp"
            android:id="@+id/home_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:headerColor="@color/brand_grey"
            app:headerLabelColor="@color/brand_blue"
            app:previousButtonSrc="@drawable/ic_baseline_arrow_back_ios_24"
            app:forwardButtonSrc="@drawable/ic_baseline_arrow_forward_ios_24"/>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>